<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true">
        <form-login login-processing-url="/resources/j_spring_security_check" login-page="/login" authentication-failure-url="/login?login_error=t" />
        <logout logout-url="/resources/j_spring_security_logout" />
        <logout delete-cookies="JSESSIONID" />
        
        <remember-me key="uniqueAndSecret" token-validity-seconds="86400"/>
        
        <intercept-url pattern="/administration/**" access="hasAnyRole('ROLE_ADMIN')" />
        <intercept-url pattern="/workbench/submissions/**" access="hasAnyRole('ROLE_SUPERVISOR,ROLE_FACTORY_MANAGER')" />
        <intercept-url pattern="/workbench/bills/**" access="hasAnyRole('ROLE_SUPERVISOR')" />
        <intercept-url pattern="/workbench/analysis/**" access="hasAnyRole('ROLE_SUPERVISOR,ROLE_FACTORY_MANAGER,ROLE_FACTORY_AGENT')" />
        
        <!-- Configure these elements to secure URIs in your application -->
        <intercept-url pattern="/choices/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/member/**" access="isAuthenticated()" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/login/**" access="permitAll" />
        <intercept-url pattern="/**" access="isAuthenticated()" />
    </http>

    <!-- Customized Authentication Management  -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="securityService">
            <password-encoder hash="sha-256" />
        </authentication-provider>
    </authentication-manager>
    
    <beans:bean id="securityService" class="com.j1987.coffeeroo.services.security.JSecurityServiceImpl"/>

</beans:beans>